@model Movie.WebUI.Models.CategoryModel
@{
    ViewData["Title"] = "EditCategory";
}

<h1>EditCategory</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="EditCategory" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" value="@Model.Name" class="form-control" />
                </div>
            </div>
           
            <div class="form-group row">
                <div class="col-md-6">
                    <button style="margin-left:35%" type="submit" class="btn btn-primary">Edit Category</button>
                </div>
            </div>
        </form>
    </div>
</div>

