@model Movie.WebUI.Models.CategoryListModel
@{
    ViewData["Title"] = "CategoryList";
}

<h1>CategoryList</h1>
<hr />

@if (Model.Categories.Count() > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <td style="width:30px">Id</td>
                <td>Name</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-primary btn-sm mr-2" href="/admin/categories/@item.Id">Edit</a>
                        <form asp-controller="Admin" asp-action="DeleteCategory" method="post" style="display:inline">
                            <input type="hidden" name="categoryId" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h4>No Movie</h4>
    </div>
}
