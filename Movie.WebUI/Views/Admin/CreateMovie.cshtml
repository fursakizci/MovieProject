@model Movie.WebUI.Models.MovieModel 
@{
    ViewData["Title"] = "CreateMovie";
}

<h1>CreateMovie</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="CreateMovie" method="post">
            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" value="" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Description" value="" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ImageUrl" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="ImageUrl" value="" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">
                    <button style="margin-left:35%" type="submit" class="btn btn-primary">Save Movie</button>
                </div>
            </div>
        </form>
    </div>
</div>
