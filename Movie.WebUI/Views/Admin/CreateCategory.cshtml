@model Movie.WebUI.Models.CategoryModel
@{
    ViewData["Title"] = "CreateCategory";
}

<h1>CreateCategory</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="CreateCategory" method="post">
            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" value="" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">
                    <button style="margin-left:35%" type="submit" class="btn btn-primary">Save Category</button>
                </div>
            </div>
        </form>
    </div>
</div>
